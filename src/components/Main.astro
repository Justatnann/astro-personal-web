---
import "../styles/global.css";
import { Image } from "astro:assets";
import profilePic from "../assets/photo.png";
---

<div id="container">
  <main class="pt-10">
    <section id="card">
      <h1>An Intr0duct1on</h1>
    </section>

    <div
      class="grid grid-rows-[auto_auto] gap-1.5 mx-10 md:mx-30 lg:mx-20 2xl:mx-70"
    >
      <div class="flex gap-1.5 items-stretch">
        <div
          class="flex-1 bg-zinc-700 border border-white/20 rounded-tl-4xl overflow-hidden"
        >
          <Image
            class="w-full h-full object-cover"
            src={profilePic}
            alt="Justatnann Profile Picture"
          />
        </div>
        <div class="flex-3 flex flex-col justify-between gap-1.5">
          <div
            class="relative place-content-center h-full bg-white border border-white/20 p-6"
          >
            <div class="absolute right-0 top-0 w-4 h-4 bg-red-600"></div>
            <p class="font-archimotov-bold text-6xl text-right">
              Atnan Ari Anders0n
            </p>
            <div class="border my-1"></div>
            <p class="font-archimotov text-3xl text-right">
              Aspiring Mobile Developer
            </p>
          </div>
          <div class="place-content-center">
            <div class="grid grid-cols-4 gap-1.5">
              <div
                class="bg-white rounded-l-4xl transition-colors delay-75 hover:animate-bounce hover:bg-blue-800 hover:text-white place-content-baseline text-center border border-white/20 p-4"
              >
                <p class="font-archimotov not-sm:hidden">Linkedin ↗</p>
              </div><div
                class="bg-white rounded-r-4xl transition-colors hover:animate-bounce hover:bg-zinc-800 hover:text-white place-content-baseline text-center border border-white/20 p-4"
              >
                <p class="font-archimotov not-sm:hidden">Github ↗</p>
              </div><div
                class="bg-white rounded-l-4xl transition-colors delay-75 hover:animate-bounce hover:bg-pink-700 hover:text-white place-content-baseline text-center border border-white/20 p-4"
              >
                <p class="font-archimotov not-sm:hidden">Instagram ↗</p>
              </div><div
                class="bg-white rounded-r-4xl transition-colors delay-75 hover:animate-bounce hover:bg-blue-800 hover:text-white place-content-baseline text-center border border-white/20 p-4"
              >
                <p class="font-archimotov not-sm:hidden">Facebook ↗</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!--Bio and Binary-->
      <div class="flex gap-1.5 h-fit">
        <div
          class="font-archimotov flex-2 text-xl lg:text-2xl text-right bg-white rounded-l-full border border-white/20 p-10"
        >
          <p>
            Hello! I'm Atnan, a passionate mobile developer. I love creating
            innovative mobile applications that make a difference. When I'm not
            coding, you can find me exploring the latest tech trends or working
            on personal projects to sharpen my skills.
          </p>
          <div>
            <div></div>
          </div>
        </div>
        <div
          class="font-archimotov flex-1 text-md lg:text-lg place-content-center text-center bg-white border border-white/20 rounded-br-4xl px-2"
        >
          "01101010 01110101 01110011 01110100 00100000 01100001 00100000
          01100100 01100101 01110110 01100101 01101100 01101111 01110000
          01100101 01110010 00100000 01110111 01100001 01101110 01101110
          01100001 01100010 01100101"
        </div>
      </div>
    </div>

    <style>
      h1 {
        font-family: "Dot";
        font-size: 3rem;
      }

      main {
        min-height: 100vh;
        display: grid;
        place-items: center;
      }
    </style>
  </main>
</div>
